<Window x:Class="毕业设计2.Seting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:毕业设计2"
        mc:Ignorable="d"
        Title="Seting" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Label Content="设置下载目录" Background="DeepSkyBlue"></Label>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <Button Style="{StaticResource btnNativeMusics}" Margin="0,0,134,0"  Click="Button_Click" >
                <TextBlock Text="选择文件夹" VerticalAlignment="Center"></TextBlock>
            </Button>
        </StackPanel>
    </Grid>
</Window>
